@model HomeViewModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>

<body>
    <h1>Welcome Our Local!</h1>
    <img src="http://velo-espresso.uk/wp-content/uploads/2016/05/Shop8-e1463069307529.jpg" height="700" width="1200" alt="Local" />
    <p><font size="5">Where? <b>Kraków 99 Florianska St!</b></font></p>

    <h2>@Model.Title</h2>


    @foreach (var stuff in Model.Stuffs)
    {
        if (stuff.Id == 1)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="@stuff.ImageUrl" alt="">
                    <div class="caption">
                        <h3>
                            <a asp-controller="Coffee">@stuff.Name</a>
                        </h3>
                    </div>
                </div>
            </div>
        }
        else if (stuff.Id == 2)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="@stuff.ImageUrl" alt="">
                    <div class="caption">
                        <h3>
                            <a asp-controller="Cake">@stuff.Name</a>
                        </h3>
                    </div>
                </div>
            </div>

        }
    }
</body>
</html>